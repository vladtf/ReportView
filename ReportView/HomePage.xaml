<Page x:Class="ReportView.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReportView"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="HomePage" Height="600">

    <StackPanel Grid.Column="1" Margin="75" >
        <Grid Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="🔎" Foreground="White" Height="35" Width="35" FontSize="20" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Height="35" Background="Transparent" BorderThickness="0" FontSize="25" VerticalAlignment="Center"/>
        </Grid>
        <StackPanel.Background>
            <SolidColorBrush Color="LightGray" Opacity="0.2"/>
        </StackPanel.Background>
    </StackPanel>
</Page>
